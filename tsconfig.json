{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noImplicitAny": false,
    "module": "es2015",
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "pretty": true,
    "strict": true,
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
